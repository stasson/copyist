{
  "name": "doctr",
  "version": "0.1.0",
  "description": "one who makes copy",
  "author": {
    "name": "stasson",
    "email": "sebastien.tasson@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "types": "./lib/index.d.ts",
  "bin": "bin/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-s build && node bin/cli.js",
    "tdd": "jest --runInBand --watch",
    "test": "jest",
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:dist": "tsc -p tsconfig.dist.json",
    "format": "prettier --write \"{src,tests,bin}/**/*.js\"",
    "commit": "standard-commit",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "gitHooks": {
    "commit-msg": "standard-commithook"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "proseWrap": "always"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.18",
    "jest": "^23.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "standard-commit": "^1.4.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/fs-extra": "^5.0.4",
    "@types/globby": "^8.0.0",
    "@types/markdown-it": "0.0.7",
    "@types/meow": "^5.0.0",
    "cac": "^6.4.2",
    "cosmiconfig": "^5.0.7",
    "fs-extra": "^7.0.1",
    "globby": "^9.0.0",
    "import-local": "^2.0.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "markdown-it-chain": "^1.3.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-front-matter": "^0.1.2",
    "markdown-it-prism": "^2.0.1",
    "prismjs": "^1.15.0",
    "update-notifier": "^2.5.0"
  }
}
